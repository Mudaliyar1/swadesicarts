<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <h5>Quick Links</h5>
                <ul style="list-style: none;">
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <li><a href="/seasonal-products">Seasonal</a></li>
                </ul>
            </div>
            <div class="col-md-4 mb-4">
                <h5>Our Products</h5>
                <ul style="list-style: none;">
                    <li><a href="/seasonal-products">Seasonal Products</a></li>
                    <li><a href="/tech-packages">Tech Services</a></li>
                    <li><a href="/organic-products">Organic Products</a></li>
                </ul>
            </div>
            <div class="col-md-4 mb-4">
                <h5>Contact Info</h5>
                <p>
                    <i class="bi bi-envelope"></i> 
                    <a href="mailto:<%= siteSettings && siteSettings.footer ? siteSettings.footer.email : 'info@swadesicarts.com' %>">
                        <%= siteSettings && siteSettings.footer ? siteSettings.footer.email : 'info@swadesicarts.com' %>
                    </a><br>
                    <i class="bi bi-telephone"></i> 
                    <a href="tel:<%= siteSettings && siteSettings.footer ? siteSettings.footer.phone : '+91-000-0000000' %>">
                        <%= siteSettings && siteSettings.footer ? siteSettings.footer.phone : '+91-000-0000000' %>
                    </a><br>
                    <i class="bi bi-geo-alt"></i> <%= siteSettings && siteSettings.footer ? siteSettings.footer.address : 'India' %>
                </p>
                <% if (siteSettings && siteSettings.socialMedia) { %>
                    <div class="social-links mt-3">
                        <% if (siteSettings.socialMedia.facebook) { %>
                            <a href="<%= siteSettings.socialMedia.facebook %>" target="_blank" class="me-2">
                                <i class="bi bi-facebook"></i>
                            </a>
                        <% } %>
                        <% if (siteSettings.socialMedia.twitter) { %>
                            <a href="<%= siteSettings.socialMedia.twitter %>" target="_blank" class="me-2">
                                <i class="bi bi-twitter"></i>
                            </a>
                        <% } %>
                        <% if (siteSettings.socialMedia.instagram) { %>
                            <a href="<%= siteSettings.socialMedia.instagram %>" target="_blank" class="me-2">
                                <i class="bi bi-instagram"></i>
                            </a>
                        <% } %>
                        <% if (siteSettings.socialMedia.linkedin) { %>
                            <a href="<%= siteSettings.socialMedia.linkedin %>" target="_blank" class="me-2">
                                <i class="bi bi-linkedin"></i>
                            </a>
                        <% } %>
                        <% if (siteSettings.socialMedia.youtube) { %>
                            <a href="<%= siteSettings.socialMedia.youtube %>" target="_blank" class="me-2">
                                <i class="bi bi-youtube"></i>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2026 Swadesi Carts. All rights reserved. | Quality and authenticity guaranteed.</p>
        </div>
    </div>
</footer>
