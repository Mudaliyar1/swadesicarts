<div class="card product-card h-100 border-0 shadow-sm">
    <div class="card-img-wrapper">
        <% if (product.featuredImage && product.featuredImage.url) { %>
            <img src="<%= product.featuredImage.url %>" class="card-img-top" alt="<%= product.title %>">
        <% } else { %>
            <img src="https://via.placeholder.com/400x300?text=<%= product.title %>" class="card-img-top" alt="<%= product.title %>">
        <% } %>
        <div class="card-badge">
            <span class="badge bg-swadesi"><%= product.category %></span>
        </div>
    </div>
    <div class="card-body d-flex flex-column">
        <h5 class="card-title fw-bold mb-2"><%= product.title %></h5>
        <p class="card-text text-muted flex-grow-1"><%= product.shortDescription %></p>
        <% if (type === 'tech' && product.price && (product.price.displayText || product.price.amount)) { %>
            <p class="text-swadesi fw-bold mb-2">
                <%= product.price.displayText || `â‚¹${product.price.amount.toLocaleString('en-IN')}` %>
            </p>
        <% } %>
        <% if (type === 'tech' && product.isAvailable === false) { %>
            <span class="badge bg-secondary mb-2">Not Available</span>
        <% } %>
        <% if (type === 'organic' && product.inStock === false) { %>
            <span class="badge bg-secondary mb-2">Out of Stock</span>
        <% } %>
        <a href="/<%= type %>-<%= type === 'tech' ? 'packages' : 'products' %>/<%= product.slug %>" class="btn btn-swadesi w-100 mt-2">
            <i class="bi bi-eye"></i> View Details
        </a>
    </div>
</div>
