<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style-new.css">
</head>
<body>
    <%- include('../partials/navbar-new') %>
    
    <!-- PAGE HEADER -->
    <section class="page-header" style="padding: 40px 0;">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-light">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/<%= type %>-products"><%= type.charAt(0).toUpperCase() + type.slice(1) %> Products</a></li>
                    <li class="breadcrumb-item active"><%= product.title %></li>
                </ol>
            </nav>
        </div>
    </section>

    <!-- PRODUCT DETAIL SECTION -->
    <section>
        <div class="container">
            <div class="row g-5">
                <!-- PRODUCT IMAGE -->
                <div class="col-lg-6">
                    <div class="product-media-container">
                        <%- include('../partials/media-carousel', { gallery: product.gallery, featuredImage: product.featuredImage }) %>
                    </div>
                </div>

                <!-- PRODUCT INFO -->
                <div class="col-lg-6">
                    <span class="product-category"><%= product.category %></span>
                    <h1 class="mt-2 mb-3"><%= product.title %></h1>
                    
                    <!-- PRICE & AVAILABILITY -->
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <% if (product.price) { %>
                            <div>
                                <span class="text-muted-custom small">Price</span>
                                <div class="product-price"><%= product.price.displayText || product.price %></div>
                            </div>
                        <% } %>
                        <% if (product.inStock !== undefined) { %>
                            <div>
                                <span class="text-muted-custom small">Availability</span>
                                <div class="mt-1">
                                    <% if (product.inStock) { %>
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> In Stock</span>
                                    <% } else { %>
                                        <span class="badge bg-warning"><i class="bi bi-exclamation-circle"></i> Out of Stock</span>
                                    <% } %>
                                </div>
                            </div>
                        <% } %>
                    </div>

                    <!-- DESCRIPTION -->
                    <div class="mb-4">
                        <h5 class="mb-3">Description</h5>
                        <p class="text-muted-custom" style="line-height: 1.8;"><%= product.fullDescription %></p>
                    </div>

                    <!-- BENEFITS / FEATURES -->
                    <% if (product.benefits && product.benefits.length > 0) { %>
                        <div class="mb-4">
                            <h5 class="mb-3">Benefits & Features</h5>
                            <ul class="list-group list-group-flush">
                                <% product.benefits.forEach(benefit => { %>
                                    <li class="list-group-item border-0 ps-0 pb-2">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        <%= benefit %>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>

                    <!-- CERTIFICATIONS (for organic products) -->
                    <% if (product.certifications && product.certifications.length > 0) { %>
                        <div class="mb-4">
                            <h5 class="mb-3">Certifications</h5>
                            <div class="d-flex flex-wrap gap-2">
                                <% product.certifications.forEach(cert => { %>
                                    <span class="badge-custom"><%= cert.name %></span>
                                <% }); %>
                            </div>
                        </div>
                    <% } %>

                    <!-- CTA BUTTONS -->
                    <div class="d-flex gap-3 mt-5">
                        <a href="/<%= type %>-products/inquiry?productId=<%= product._id %>" class="btn btn-accent btn-lg flex-grow-1">
                            <i class="bi bi-chat-dots"></i> Inquire Now
                        </a>
                        <a href="/<%= type %>-products" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>

                    <!-- SHARE -->
                    <div class="mt-4 pt-4 border-top">
                        <p class="text-muted-custom small mb-3">Share this product:</p>
                        <div class="d-flex gap-2">
                            <a href="https://www.facebook.com/sharer/sharer.php" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-facebook"></i>
                            </a>
                            <a href="https://twitter.com/intent/tweet" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-twitter"></i>
                            </a>
                            <a href="https://www.linkedin.com/sharing/share-offsite/" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-linkedin"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer-new') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
