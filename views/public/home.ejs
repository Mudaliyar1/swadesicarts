<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center min-vh-75">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h1 class="display-4 fw-bold mb-3">Welcome to <span class="text-accent">Swadesi Carts</span></h1>
                    <p class="lead text-muted mb-4">Your one-stop destination for authentic seasonal products, cutting-edge tech services, and pure organic products.</p>
                    <div class="d-flex gap-3">
                        <a href="/seasonal-products" class="btn btn-swadesi btn-lg">
                            <i class="bi bi-cart-check"></i> Explore Products
                        </a>
                        <a href="/contact" class="btn btn-outline-swadesi btn-lg">
                            <i class="bi bi-chat-dots"></i> Contact Us
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="/images/hero-illustration.svg" alt="Swadesi Carts" class="img-fluid" onerror="this.src='https://via.placeholder.com/600x400?text=Swadesi+Carts'">
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Sections -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Our Product Categories</h2>
                <p class="text-muted">Explore our wide range of authentic products and services</p>
            </div>
            
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="category-card card border-0 shadow-sm h-100 hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-circle mb-3">
                                <i class="bi bi-calendar3 text-swadesi"></i>
                            </div>
                            <h4 class="card-title fw-bold mb-3">Seasonal Products</h4>
                            <p class="card-text text-muted">Fresh seasonal items curated for you throughout the year</p>
                            <a href="/seasonal-products" class="btn btn-outline-swadesi mt-2">View Products</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="category-card card border-0 shadow-sm h-100 hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-circle mb-3">
                                <i class="bi bi-laptop text-swadesi"></i>
                            </div>
                            <h4 class="card-title fw-bold mb-3">Tech Services</h4>
                            <p class="card-text text-muted">Professional website development and tech solutions for your business</p>
                            <a href="/tech-packages" class="btn btn-outline-swadesi mt-2">View Packages</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="category-card card border-0 shadow-sm h-100 hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-circle mb-3">
                                <i class="bi bi-flower2 text-swadesi"></i>
                            </div>
                            <h4 class="card-title fw-bold mb-3">Organic Products</h4>
                            <p class="card-text text-muted">100% organic and certified products for healthy living</p>
                            <a href="/organic-products" class="btn btn-outline-swadesi mt-2">View Products</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Seasonal Products -->
    <% if (featuredSeasonal.length > 0) { %>
    <section class="py-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold">Featured Seasonal Products</h3>
                <a href="/seasonal-products" class="btn btn-link text-swadesi">View All <i class="bi bi-arrow-right"></i></a>
            </div>
            <div class="row g-4">
                <% featuredSeasonal.slice(0, 3).forEach(product => { %>
                <div class="col-md-4">
                    <%- include('../partials/product-card', { 
                        product: product, 
                        type: 'seasonal' 
                    }) %>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Featured Tech Packages -->
    <% if (featuredTech.length > 0) { %>
    <section class="py-5 bg-light">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold">Featured Tech Services</h3>
                <a href="/tech-packages" class="btn btn-link text-swadesi">View All <i class="bi bi-arrow-right"></i></a>
            </div>
            <div class="row g-4">
                <% featuredTech.slice(0, 3).forEach(package => { %>
                <div class="col-md-4">
                    <%- include('../partials/product-card', { 
                        product: package, 
                        type: 'tech' 
                    }) %>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Featured Organic Products -->
    <% if (featuredOrganic.length > 0) { %>
    <section class="py-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold">Featured Organic Products</h3>
                <a href="/organic-products" class="btn btn-link text-swadesi">View All <i class="bi bi-arrow-right"></i></a>
            </div>
            <div class="row g-4">
                <% featuredOrganic.slice(0, 3).forEach(product => { %>
                <div class="col-md-4">
                    <%- include('../partials/product-card', { 
                        product: product, 
                        type: 'organic' 
                    }) %>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- CTA Section -->
    <section class="py-5 bg-swadesi text-white">
        <div class="container text-center">
            <h2 class="fw-bold mb-3">Ready to Get Started?</h2>
            <p class="lead mb-4">Contact us today for inquiries about our products and services</p>
            <a href="/contact" class="btn btn-light btn-lg">
                <i class="bi bi-envelope"></i> Contact Us
            </a>
        </div>
    </section>

    <%- include('../partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
