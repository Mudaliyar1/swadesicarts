<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style-new.css">
</head>
<body>
    <%- include('../partials/navbar-new') %>
    
    <!-- PAGE HEADER -->
    <section class="page-header">
        <div class="container">
            <h1>Tech Services & Packages</h1>
            <p>Professional development solutions tailored to your needs</p>
        </div>
    </section>

    <!-- PACKAGES SECTION -->
    <section>
        <div class="container">
            <!-- CATEGORY FILTER -->
            <%- include('../partials/category-filter') %>
            
            <!-- NO PACKAGES -->
            <% if (packages.length === 0) { %>
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-info-circle" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">No Packages Available</h5>
                    <p class="mb-0">Packages will be available soon. Please check back later.</p>
                </div>
            <% } else { %>
                <!-- PACKAGES GRID -->
                <div class="row g-4">
                    <% packages.forEach(package => { %>
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="card product-card h-100">
                            <div class="product-image-wrapper">
                                <% if (package.featuredImage && package.featuredImage.url) { %>
                                    <img src="<%= package.featuredImage.url %>" alt="<%= package.title %>">
                                <% } else { %>
                                    <div style="background: linear-gradient(135deg, #e0e0e0, #f5f5f5); width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; font-size: 4rem; opacity: 0.3;">
                                        ðŸ’»
                                    </div>
                                <% } %>
                                <span class="product-badge">Featured</span>
                            </div>
                            <div class="product-card-body">
                                <span class="product-category"><%= package.category %></span>
                                <h5 class="product-card-title"><%= package.title %></h5>
                                <p class="product-card-description"><%= package.shortDescription %></p>
                                <% if (package.price && package.price.displayText) { %>
                                    <div class="product-price"><%= package.price.displayText %></div>
                                <% } %>
                                <div class="product-card-footer">
                                    <a href="/tech-packages/<%= package.slug %>" class="btn btn-primary flex-grow-1">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </section>

    <%- include('../partials/footer-new') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
