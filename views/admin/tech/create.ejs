<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="admin-body">
    <nav class="navbar navbar-dark bg-swadesi d-lg-none">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <span class="navbar-brand mb-0">Add Product</span>
            <a href="/admin/logout" class="btn btn-sm btn-outline-light"><i class="bi bi-box-arrow-right"></i></a>
        </div>
    </nav>

    <div class="admin-sidebar d-none d-lg-flex flex-column" id="sidebarDesktop">
        <div class="sidebar-header">
            <h5 class="mb-0"><i class="bi bi-speedometer2"></i> <span class="sidebar-text">Admin Panel</span></h5>
        </div>
        <ul class="sidebar-nav flex-grow-1">
            <li><a href="/admin/dashboard" title="Dashboard"><i class="bi bi-speedometer2"></i><span class="sidebar-text">Dashboard</span></a></li>
            <li><a href="/admin/seasonal-products" class="active" title="Seasonal Products"><i class="bi bi-calendar3"></i><span class="sidebar-text">Seasonal Products</span></a></li>
            <li><a href="/admin/tech-packages" title="Tech Packages"><i class="bi bi-laptop"></i><span class="sidebar-text">Tech Packages</span></a></li>
            <li><a href="/admin/organic-products" title="Organic Products"><i class="bi bi-flower2"></i><span class="sidebar-text">Organic Products</span></a></li>
            <li><a href="/admin/inquiries" title="Inquiries"><i class="bi bi-chat-dots"></i><span class="sidebar-text">Inquiries</span></a></li>
        </ul>
        <div class="sidebar-footer">
            <a href="/" target="_blank" title="View Website"><i class="bi bi-globe"></i><span class="sidebar-text">View Website</span></a>
            <a href="/admin/logout" title="Logout"><i class="bi bi-box-arrow-right"></i><span class="sidebar-text">Logout</span></a>
        </div>
        <button class="sidebar-toggle d-none d-lg-block" id="sidebarToggle"><i class="bi bi-chevron-left"></i></button>
    </div>

    <div class="offcanvas offcanvas-start bg-swadesi text-white" tabindex="-1" id="sidebar">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Admin Panel</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body p-0">
            <ul class="sidebar-nav-mobile">
                <li><a href="/admin/dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                <li><a href="/admin/seasonal-products"><i class="bi bi-calendar3"></i> Seasonal Products</a></li>
                <li><a href="/admin/tech-packages"><i class="bi bi-laptop"></i> Tech Packages</a></li>
                <li><a href="/admin/organic-products"><i class="bi bi-flower2"></i> Organic Products</a></li>
                <li><a href="/admin/inquiries"><i class="bi bi-chat-dots"></i> Inquiries</a></li>
                <li><a href="/" target="_blank"><i class="bi bi-globe"></i> View Website</a></li>
                <li><a href="/admin/logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
            </ul>
        </div>
    </div>

    <div class="admin-content">
        <div class="container-fluid p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0">Add Tech Package</h2>
                <a href="/admin/tech-packages" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back</a>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form action="/admin/tech-packages/create" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Title *</label>
                                <input type="text" class="form-control" name="title" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Category *</label>
                                <input type="text" class="form-control" name="category" required>
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label">Short Description *</label>
                                <textarea class="form-control" name="shortDescription" rows="2" maxlength="200" required></textarea>
                                <small class="text-muted">Maximum 200 characters</small>
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label">Full Description *</label>
                                <textarea class="form-control" name="fullDescription" rows="6" required></textarea>
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label">Features</label>
                                <div id="features-container">
                                    <div class="input-group mb-2">
                                        <input type="text" class="form-control" name="features[]" placeholder="e.g., Free Domain & Hosting">
                                        <button type="button" class="btn btn-danger" onclick="removeFeature(this)"><i class="bi bi-trash"></i></button>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="addFeature()"><i class="bi bi-plus-circle"></i> Add Feature</button>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Price (₹)</label>
                                <input type="number" class="form-control" name="priceAmount" placeholder="15000">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Featured Image *</label>
                                <input type="file" class="form-control" id="featuredImage" name="featuredImage" accept="image/*" required onchange="previewFeaturedImage(event)">
                                <div id="featuredPreview"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Gallery Images/Videos (Optional)</label>
                                <input type="file" class="form-control" id="gallery" name="gallery" accept="image/*,video/*" multiple onchange="previewGalleryFiles(event)">
                                <small class="text-muted d-block mt-2">You can upload up to 10 images/videos. They will all be visible on the product detail page.</small>
                                
                            <!-- Gallery Carousel Preview -->
                            <div class="col-12 mb-3" id="galleryCarouselContainer" style="display: none;">
                                <label class="form-label">Gallery Preview (Carousel)</label>
                                <div style="border: 2px solid #dee2e6; border-radius: 8px; padding: 1rem; background-color: #f8f9fa;">
                                    <!-- Main Display -->
                                    <div style="position: relative; width: 100%; margin-bottom: 1rem;">
                                        <div id="carouselMainDisplay" style="display: flex; align-items: center; justify-content: center; background-color: white; border-radius: 6px; overflow: hidden; aspect-ratio: 1; position: relative;">
                                            <i class="bi bi-image" style="font-size: 2rem; color: #ccc;"></i>
                                        </div>
                                    </div>
                                    
                                    <!-- Thumbnails -->
                                    <div id="galleryCarouselThumbnails" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(80px, 1fr)); gap: 0.5rem; margin-bottom: 1rem;"></div>
                                    
                                    <!-- Controls -->
                                    <div style="display: flex; justify-content: center; gap: 1rem; align-items: center;">
                                        <button type="button" class="btn btn-sm btn-swadesi" id="prevBtn" onclick="prevCarouselItem()" disabled>
                                            <i class="bi bi-chevron-left"></i> Previous
                                        </button>
                                        <span id="carouselCounter" style="font-weight: bold; color: var(--swadesi-green); min-width: 60px; text-align: center;">-</span>
                                        <button type="button" class="btn btn-sm btn-swadesi" id="nextBtn" onclick="nextCarouselItem()" disabled>
                                            Next <i class="bi bi-chevron-right"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Order</label>
                                <input type="number" class="form-control" name="order" value="0">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Availability</label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="isAvailable" checked>
                                    <label class="form-check-label">Available for purchase</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-swadesi" id="submitBtn"><i class="bi bi-check-circle"></i> Create Package</button>
                                <a href="/admin/tech-packages" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Upload Progress Overlay -->
    <div id="uploadProgressOverlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.8); z-index: 9999; justify-content: center; align-items: center;">
        <div style="background: white; padding: 40px; border-radius: 16px; box-shadow: 0 10px 40px rgba(0,0,0,0.3); max-width: 500px; width: 90%; text-align: center;">
            <div style="font-size: 3rem; color: #2c5f2d; margin-bottom: 20px;">
                <i class="bi bi-cloud-upload"></i>
            </div>
            <h4 style="color: #2c5f2d; margin-bottom: 10px;">Uploading Files...</h4>
            <p style="color: #666; margin-bottom: 30px; font-size: 0.95rem;"><strong>⚠️ Please don't close this tab or navigate away</strong></p>
            <div style="width: 100%; background: #e9ecef; border-radius: 10px; height: 30px; overflow: hidden; margin-bottom: 15px;">
                <div id="progressBar" style="height: 100%; background: linear-gradient(90deg, #2c5f2d, #97c93d); width: 0%; transition: width 0.3s ease; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 0.9rem;"></div>
            </div>
            <div id="progressText" style="color: #2c5f2d; font-weight: 600; font-size: 1.1rem;">0%</div>
            <div id="uploadSpeed" style="color: #666; font-size: 0.85rem; margin-top: 10px;"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
    <script>
        // Upload Progress Handler
        const form = document.querySelector('form');
        const submitBtn = document.getElementById('submitBtn');
        const progressOverlay = document.getElementById('uploadProgressOverlay');
        const progressBar = document.getElementById('progressBar');
        const progressText = document.getElementById('progressText');
        const uploadSpeed = document.getElementById('uploadSpeed');
        
        let isUploading = false;
        let uploadStarted = false;
        let startTime;
        let lastLoaded = 0;
        let lastTime;

        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validate gallery file count
            const galleryInput = document.getElementById('gallery');
            if (galleryInput.files.length > 10) {
                alert('You can only upload up to 10 gallery files at once.');
                return;
            }
            
            const formData = new FormData(form);
            const xhr = new XMLHttpRequest();
            
            // Show progress overlay
            progressOverlay.style.display = 'flex';
            submitBtn.disabled = true;
            isUploading = true;
            uploadStarted = false;
            
            // Track upload progress
            xhr.upload.addEventListener('loadstart', function() {
                uploadStarted = true;
                startTime = Date.now();
                lastTime = startTime;
                lastLoaded = 0;
            });
            
            xhr.upload.addEventListener('progress', function(e) {
                if (e.lengthComputable) {
                    const percentComplete = Math.round((e.loaded / e.total) * 100);
                    progressBar.style.width = percentComplete + '%';
                    progressBar.textContent = percentComplete + '%';
                    progressText.textContent = percentComplete + '%';
                    
                    // Calculate upload speed
                    const currentTime = Date.now();
                    const timeDiff = (currentTime - lastTime) / 1000;
                    const bytesDiff = e.loaded - lastLoaded;
                    
                    if (timeDiff > 0.2) {
                        const speed = bytesDiff / timeDiff;
                        const speedMB = (speed / (1024 * 1024)).toFixed(2);
                        const loadedMB = (e.loaded / (1024 * 1024)).toFixed(2);
                        const totalMB = (e.total / (1024 * 1024)).toFixed(2);
                        const remaining = e.total - e.loaded;
                        const remainingTime = speed > 0 ? Math.round(remaining / speed) : 0;
                        
                        uploadSpeed.textContent = `${loadedMB}MB / ${totalMB}MB | Speed: ${speedMB} MB/s | ETA: ${remainingTime}s`;
                        lastLoaded = e.loaded;
                        lastTime = currentTime;
                    }
                }
            });
            
            xhr.addEventListener('load', function() {
                isUploading = false;
                if (xhr.status === 200 || xhr.status === 302) {
                    progressBar.style.width = '100%';
                    progressBar.textContent = '100%';
                    progressText.textContent = '100% - Upload Complete!';
                    uploadSpeed.textContent = 'Processing on server...';
                    
                    setTimeout(() => {
                        window.location.href = '/admin/tech-packages';
                    }, 800);
                } else {
                    progressOverlay.style.display = 'none';
                    submitBtn.disabled = false;
                    alert('Upload failed. Please try again.');
                }
            });
            
            xhr.addEventListener('error', function() {
                isUploading = false;
                progressOverlay.style.display = 'none';
                submitBtn.disabled = false;
                alert('Upload failed. Please check your connection and try again.');
            });
            
            xhr.open('POST', form.action);
            xhr.send(formData);
        });

        window.addEventListener('beforeunload', function(e) {
            if (isUploading && uploadStarted) {
                e.preventDefault();
                e.returnValue = 'Upload in progress. Are you sure you want to leave?';
                return e.returnValue;
            }
        });

        // Original carousel code below

        function addFeature() {
            const container = document.getElementById('features-container');
            const div = document.createElement('div');
            div.className = 'input-group mb-2';
            div.innerHTML = `
                <input type="text" class="form-control" name="features[]" placeholder="Enter feature">
                <button type="button" class="btn btn-danger" onclick="removeFeature(this)"><i class="bi bi-trash"></i></button>
            `;
            container.appendChild(div);
        }
        
        function removeFeature(btn) {
            btn.parentElement.remove();
        }

        function previewFeaturedImage(event) {
            const input = event.target;
            const preview = document.getElementById('featuredPreview');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    preview.innerHTML = `
                        <div class="mt-2">
                            <img src="${e.target.result}" class="img-fluid rounded" style="max-height: 200px;">
                        </div>
                    `;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        let galleryCarouselItems = [];
        let currentCarouselIndex = 0;

        function previewGalleryFiles(event) {
            const input = event.target;
            galleryCarouselItems = [];
            currentCarouselIndex = 0;
            
            if (input.files && input.files.length > 0) {
                const container = document.getElementById('galleryCarouselContainer');
                container.style.display = 'block';
                
                Array.from(input.files).forEach((file, index) => {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        const isVideo = file.type.startsWith('video/');
                        galleryCarouselItems.push({
                            src: e.target.result,
                            type: isVideo ? 'video' : 'image',
                            name: file.name
                        });
                        
                        if (galleryCarouselItems.length === input.files.length) {
                            renderGalleryCarousel();
                        }
                    };
                    reader.readAsDataURL(file);
                });
            } else {
                document.getElementById('galleryCarouselContainer').style.display = 'none';
                galleryCarouselItems = [];
            }
        }

        function renderGalleryCarousel() {
            if (galleryCarouselItems.length === 0) return;
            
            const thumbContainer = document.getElementById('galleryCarouselThumbnails');
            thumbContainer.innerHTML = '';
            
            galleryCarouselItems.forEach((item, index) => {
                const thumb = document.createElement('div');
                thumb.style.cssText = 'cursor: pointer; border-radius: 6px; overflow: hidden; aspect-ratio: 1; border: 3px solid transparent; transition: all 0.3s ease; background-color: white;';
                thumb.className = index === 0 ? 'gallery-thumb-active' : 'gallery-thumb';
                
                if (item.type === 'video') {
                    thumb.innerHTML = `
                        <div style="position: relative; width: 100%; height: 100%;">
                            <video src="${item.src}" style="width: 100%; height: 100%; object-fit: cover;"></video>
                            <span style="position: absolute; bottom: 2px; right: 2px; background-color: rgba(0, 123, 255, 0.9); color: white; padding: 0.2rem 0.4rem; border-radius: 3px; font-size: 0.65rem;">
                                <i class="bi bi-play-circle-fill"></i>
                            </span>
                        </div>
                    `;
                } else {
                    thumb.innerHTML = `<img src="${item.src}" style="width: 100%; height: 100%; object-fit: cover;" alt="Thumb">`;
                }
                
                thumb.onclick = () => showCarouselItem(index);
                thumbContainer.appendChild(thumb);
            });
            
            showCarouselItem(0);
        }

        function showCarouselItem(index) {
            if (index < 0 || index >= galleryCarouselItems.length) return;
            
            currentCarouselIndex = index;
            const item = galleryCarouselItems[index];
            const mainDisplay = document.getElementById('carouselMainDisplay');
            
            if (item.type === 'video') {
                mainDisplay.innerHTML = `
                    <video src="${item.src}" style="width: 100%; height: 100%; object-fit: cover;" controls></video>
                    <span class="carousel-video-badge" style="position: absolute; top: 10px; left: 10px; background-color: rgba(0, 0, 0, 0.7); color: white; padding: 0.5rem 1rem; border-radius: 4px; font-size: 0.85rem; font-weight: bold;">
                        <i class="bi bi-play-circle"></i> VIDEO
                    </span>
                `;
            } else {
                mainDisplay.innerHTML = `<img src="${item.src}" style="width: 100%; height: 100%; object-fit: cover;" alt="Gallery">`;
            }
            
            document.querySelectorAll('#galleryCarouselThumbnails > div').forEach((thumb, i) => {
                if (i === index) {
                    thumb.classList.add('gallery-thumb-active');
                    thumb.classList.remove('gallery-thumb');
                    thumb.style.borderColor = 'var(--swadesi-green)';
                    thumb.style.transform = 'scale(1.05)';
                } else {
                    thumb.classList.remove('gallery-thumb-active');
                    thumb.classList.add('gallery-thumb');
                    thumb.style.borderColor = 'transparent';
                    thumb.style.transform = 'scale(1)';
                }
            });
            
            const counter = document.getElementById('carouselCounter');
            counter.textContent = `${index + 1} / ${galleryCarouselItems.length}`;
            
            document.getElementById('prevBtn').disabled = index === 0;
            document.getElementById('nextBtn').disabled = index === galleryCarouselItems.length - 1;
        }

        function prevCarouselItem() {
            if (currentCarouselIndex > 0) {
                showCarouselItem(currentCarouselIndex - 1);
            }
        }

        function nextCarouselItem() {
            if (currentCarouselIndex < galleryCarouselItems.length - 1) {
                showCarouselItem(currentCarouselIndex + 1);
            }
        }

        document.addEventListener('keydown', function(event) {
            if (galleryCarouselItems.length === 0) return;
            if (event.key === 'ArrowLeft') {
                prevCarouselItem();
            } else if (event.key === 'ArrowRight') {
                nextCarouselItem();
            }
        });

        const style = document.createElement('style');
        style.textContent = `
            .gallery-thumb-active {
                border-color: var(--swadesi-green) !important;
                transform: scale(1.05) !important;
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
